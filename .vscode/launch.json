    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "request": "launch",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            "type": "lldb",
            "windows": {
                "type": "cppvsdbg",
                "stopAtEntry": false,
                "externalConsole": true,
                "program": "target\\debug\\arena_gunpowder_and_sorcery.exe",
            },
            "osx": {
                "terminal": "external",
                "program": "target/debug/arena_gunpowder_and_sorcery",
            },
            "sourceLanguages": [
                "rust"
            ],
            "sourceMap": {
                "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-x86_64-apple-darwin/lib/rustlib/src/rust"
            },
            "logging": {
                "moduleLoad": false
            }
        },
    ]
}